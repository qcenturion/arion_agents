# Runtime
APP_ENV=local
LOG_LEVEL=INFO

# Database
# Prefer DATABASE_URL for prod (e.g., GCP Cloud SQL Postgres)
# Example Postgres: postgresql+psycopg://user:pass@host:5432/dbname
# Example SQLite (local): sqlite:///config.db
DATABASE_URL=

# LLM Provider (choose one)
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# RAG store (optional for POC)
RAG_STORE=faiss
QDRANT_URL=
QDRANT_API_KEY=
CHROMA_HOST=localhost
CHROMA_PORT=8000
PGHOST=
PGPORT=5432
PGDATABASE=
PGUSER=
PGPASSWORD=

# Observability / OpenTelemetry
OTEL_SERVICE_NAME=arion_agents_api
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp
